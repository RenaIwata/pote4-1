<h3>スケジュール編集</h3>
<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :ttl,"タイトル" %></th>
      <td class="text"><%= f.text_field :ttl %></td>
    </tr>
    <tr>
      <th><%= f.label :start,"開始日" %></th>
      <td class="text"><%= f.date_field :start %></td>
    </tr>
    <tr>
      <th><%= f.label :end,"終了日" %></th>
      <td class="text"><%= f.date_field :end %></td>
    </tr>
    <tr>
      <th><%= f.label :all,"終日" %></th>
      <td class="all-day"><%= f.check_box :all %><br>終日の場合はチェックを入れてください</td></td>
    </tr>
    <tr>
      <th><%= f.label :memo ,"メモ" %></th>
      <td class="text"><%= f.text_area :memo %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "編集を完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :users %></li>
    </ul>
  </div>
<% end %>